<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>

    <record model="ir.ui.view" id="view_stock_type_activities">
        <field name="name">stock.picking.type.activities</field>
        <field name="model">stock.picking.type</field> 
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="sheet/group[2]" position="after">
                <group string="Actividades" attrs="{'invisible':[('code','!=','outgoing')]}">

                         <group>
                            <!--field name="activity_res_model" invisible="1"/-->
                            <field name="activity_type_id" options="{'no_create': True, 'no_open': True}" 
                                   can_create="true" can_write="true" required="1"/>
                            <field name="activity_summary" required="1" placeholder="por ejemplo: conversaciÃ³n de una propuesta"/>
                         </group>
                        <group>
                            <group>
                                <field name="activity_time_range"/>
                            </group>
                            <group>
                                <field name="activity_date_range" nolabel="1"/>
                            </group>
                         </group>
                    
                    
                        <!--field name="activity_user_id" invisible="1"/-->
                        <field name="activity_user_type" invisible="1"/>
                        <field name="activity_user_field_name" invisible="1"/>

                </group>
            </xpath>
        </field>
    </record>  


</data>
</odoo>